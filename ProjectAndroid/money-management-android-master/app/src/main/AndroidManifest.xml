        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.hust.app.moneymanagement.ThemLoaiChiActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.hust.app.moneymanagement.ListLoaiChiActivity" android:screenOrientation="portrait" />
        <activity android:name="com.hust.app.moneymanagement.ChiTieuActivity" android:screenOrientation="portrait" />
        <activity android:name="com.hust.app.moneymanagement.TimKiemActivity"  android:screenOrientation="portrait"/>
        <activity android:name="com.hust.app.moneymanagement.SplashScreenActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hust.app.moneymanagement.ThemLoaiThuActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.hust.app.moneymanagement.ListLoaiThuActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.hust.app.moneymanagement.ThuNhapActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.hust.app.moneymanagement.MainActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>